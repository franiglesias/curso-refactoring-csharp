# EditorConfig helps maintain consistent coding styles between different editors and IDEs
# Learn more: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
# Let Prettier handle line length
max_line_length = off

[*.md]
# Keep trailing spaces in Markdown for hard line breaks
trim_trailing_whitespace = false

